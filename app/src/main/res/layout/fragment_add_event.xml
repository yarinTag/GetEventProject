    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/AddEventName"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <EditText
            android:id="@+id/addEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_marginTop="39dp"
            android:hint="Description"
            android:padding="15dp" />

        <EditText
            android:id="@+id/AddEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp"
            android:hint="Event_Name"
            android:padding="10dp" />

        <Button
            android:id="@+id/SaveAddEventBtn"
            android:layout_width="189dp"
            android:layout_height="66dp"
            android:layout_below="@+id/addEventDescription"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/CancelAddEventBtn"
            android:padding="10dp"
            android:text="Post Event" />

        <Button
            android:id="@+id/CancelAddEventBtn"
            android:layout_width="181dp"
            android:layout_height="64dp"
            android:layout_below="@+id/addEventDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="18dp"
            android:padding="10dp"
            android:text="Cancel" />


    </RelativeLayout>
